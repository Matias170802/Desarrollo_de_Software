spring.application.name=inicial1

# Configuración de la base de datos H2
# Habilitar la consola de H2
spring.h2.console.enabled=true
# Parámetros para conectarnos a una base de datos
spring.datasource.url=jdbc:h2:mem:test2
spring.datasource.driverClassName=org.h2.Driver
spring.datasource.username=sa
spring.datasource.password=
spring.jpa.properties.hibernate.default_schema=RBAC

# Configuración de JPA
spring.jpa.database-platform=org.hibernate.dialect.H2Dialect
# EL update le dice que si no existe n las tablas que las cree y luego actualice
spring.jpa.hibernate.ddl-auto=create
# si coloco drop va a eliminar todas las tablas que tenía

# Muestra por la consola cómo se desarrollan las consultas SQL
spring.jpa.show-sql=true

# Puerto de ejecución, donde escucha el servidor embebido
server.port=5000

# OPEN API
# https://clasefake.onrender.com/swagger-ui/index.html  Así lo llamen en Render
# http://localhost:8080/swagger-ui/index.html  ASI HAY QUE LLAMARLO Localmente
springdoc.swagger-ui.enabled=true
springdoc.api-docs.enabled=true
springdoc.swagger-ui.path=/swagger-ui.html
springdoc.api-docs.path=/api-docs

# LEVANTAR H2 con este comando
# http://localhost:5000/h2-console/

# Configuración del servidor Flask
servidor.flask.url=http://localhost:5000/predict
